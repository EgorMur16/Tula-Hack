@model WebAppAutorization.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].SerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].TgNick)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].DataTravell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Privat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TgNick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.DataTravell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Privat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
